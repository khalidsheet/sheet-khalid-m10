extends ../layout

block content
    div(class='container' style='margin-top: 20px;')
        div.row
            div.col-md-12
                div.row 
                    .col-md-6
                        h1.page-title Gists
                    .col-md-6
                        a.btn.btn-primary.float-end(href='/gists/new') Create new gist
                if gists.length > 0
                    div.row
                        each gist in gists
                            div.col-4
                                div.gist-box
                                    div.gist-header
                                        h3.gist-title #{gist.title}
                                        div.gist-actions
                                            a(href='/gists/edit/#{gist._id}') Edit
                                            a(href='/gists/delete/#{gist._id}') Delete
                       
                               
                else
                    div.row
                        div.col-4
                            .gist-box
                                div.gist-header
                                    h3.gist-title No gists found
                                    div.gist-actions
                                        a(href='/gists/new') Create